<%- include("partials/header") %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Gallery</h1>
			<p>
				Ruchi's artwork, paintings and creative items</p>
			<a class = "btn btn-primary btn-lg" href="/gallery/new">Post new image</a>
		</div>
	</header>

<div class="row text-center" style="display: flex; flex-wrap; wrap;">
	<% photos.forEach(function(photo){ %>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				<img src=" <%= photo.image %> ">
				<div class="caption">
					<h4><%= photo.title %></h4>
				</div>
			</div>
		</div>
	<%	}); %>
</div>


<%- include("partials/footer") %>

</div>



